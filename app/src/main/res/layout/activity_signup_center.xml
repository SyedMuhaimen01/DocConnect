<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupCenter"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/black">
        <ImageView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:src="@drawable/apptitle"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/loginform">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"></TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthcare Center name"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/centername"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter name"
            android:textColorHint="@color/hintcolor"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/email"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter Email"
            android:textColor="@color/black"
            android:textColorHint="@color/hintcolor"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/contact"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@color/hintcolor"
            android:hint="+921234567890"
            android:inputType="number"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/address"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@color/hintcolor"
            android:hint="Enter address"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/type"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Dispensery/Hospital/Clinic"
            android:textColor="@color/black"
            android:textColorHint="@color/hintcolor"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/password"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColorHint="@color/hintcolor"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/uploadfile_foreground"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/license"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Upload Pratice License"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="-32dp"
            android:layout_marginLeft="65dp"></TextView>

    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/signup"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Sign up"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="125dp"
        android:background="@drawable/buttons"></Button>
    <TextView
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Already have an account? Sign In"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"></TextView>
</LinearLayout>