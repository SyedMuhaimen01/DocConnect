<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:background="@color/black"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="-15dp"
                android:src="@drawable/location_icon_foreground"
                android:layout_marginLeft="0dp"></ImageView>
            <TextView
                android:id="@+id/location"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Islamabad, Pakistan"
                android:layout_marginLeft="-20dp"
                android:textSize="14dp"
                android:textColor="@color/white"></TextView>
            </LinearLayout>

                <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-9dp"
                android:background="@drawable/searc_icon_around_circle"></View>
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="-19dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/search_icon_foreground"></ImageButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttons"
            android:backgroundTint="#BC3131"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Drug Consultation\nwith a"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="43dp"
                android:text="Trusted"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-135dp"
                android:layout_marginTop="70dp"
                android:text="Pharmacist"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/searchbar"
                android:backgroundTint="@color/white"
                android:text="Try Now"
                android:textColor="#388523"
                android:textSize="12dp"></Button>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="@mipmap/doctor_foreground"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-20dp"></ImageView>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Services"
            android:textColor="@color/white"
             android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/black">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/services_rectangle"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/doctor"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="0dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/services_rectangle"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/hospital_image"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="0dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/services_rectangle"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/covid19_foreground"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covid 19"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="0dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/services_rectangle"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/tablets_foreground"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tablets"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="0dp"></TextView>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Doctors"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></TextView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:background="@color/black">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/popularDoctorRecyclerView"
                android:layout_marginTop="00dp"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom">
            <ImageButton
                android:id="@+id/home"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/home_icon_foreground"
                ></ImageButton>

            <ImageButton
                android:id="@+id/chats"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/chat_icon_foreground"
                ></ImageButton>
            <ImageButton
                android:id="@+id/map"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/map_icon_foreground"
                android:background="@drawable/buttonsbar_circle"
                ></ImageButton>
            <ImageButton
                android:id="@+id/appoint"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/appointment_icon_foreground"
                ></ImageButton>
            <ImageButton
                android:id="@+id/profile"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/profile_icon_foreground"
                ></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#9F9B9B"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="-325dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textColor="#9F9B9B"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="40dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appoint"
                android:textColor="#9F9B9B"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#9F9B9B"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"></TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>