<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patientProfile"
    android:orientation="vertical"
    android:background="@drawable/profilebackground">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@drawable/backarrow_foreground"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="-70dp"
        android:textColor="@color/white"
        android:layout_marginLeft="100dp"></TextView>
    <ImageView
        android:id="@+id/logout"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/logout"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="300dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_marginLeft="192dp"></TextView>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/picholder"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/picholder"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-150dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="23dp"></TextView>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Mustafa"
      android:paddingTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:background="@drawable/secondarybuttons"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"></TextView>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="samustafa290@gmail.com"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:background="@drawable/secondarybuttons"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"></TextView>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="+923305926891"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:background="@drawable/secondarybuttons"/>
    <TextView
        android:id="@+id/cnic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CNIC"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp"></TextView>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="6110108487541"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        android:background="@drawable/secondarybuttons"/>

    <Button
        android:id="@+id/editprof"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Edit Profile"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/buttons"></Button>

    <LinearLayout
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom">
        <ImageButton
            android:id="@+id/home"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_icon_foreground"
            ></ImageButton>

        <ImageButton
            android:id="@+id/chats"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat_icon_foreground"
            ></ImageButton>
        <ImageButton
            android:id="@+id/map"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/map_icon_foreground"
            android:background="@drawable/buttonsbar_circle"
            ></ImageButton>
        <ImageButton
            android:id="@+id/appoint"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/appointment_icon_foreground"
            ></ImageButton>
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/profile_icon_foreground"
            ></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-325dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appoint"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"></TextView>

    </LinearLayout>
</LinearLayout>