<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentSummary"
    android:orientation="vertical"
    android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:orientation="vertical"
            android:background="@color/black">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow_foreground"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Summary"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-70dp"
                android:textColor="@color/white"
                android:textAlignment="center"></TextView>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/picholder"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Cooper"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-90dp"
                android:layout_marginLeft="135dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dermetologist"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="137dp"
                android:textColor="@color/white"></TextView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location_foreground"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="124dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Islamabad, Pakistan"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-23dp"
                android:layout_marginLeft="150dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Date"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="April 4, 2024"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="250dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Time"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="09:00 AM"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="250dp"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/profilebackground"
            android:layout_marginTop="-50dp">
            <View
                android:layout_width="320dp"
                android:layout_height="5dp"
                android:background="@drawable/inputbox"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Amount"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Rs. 5000"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="250dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Payment Method"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Credit Card"
                android:textSize="15dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-40dp"
                android:layout_marginLeft="250dp"
                android:textColor="@color/white"></TextView>
            <Button
                android:id="@+id/login"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="Pay Now"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/infocards"></Button>
            <ImageView
                android:layout_marginLeft="120dp"
                android:layout_marginTop="135dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bottombar"></ImageView>
        </LinearLayout>

</LinearLayout>
