<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttons"
    android:backgroundTint="#C67272"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="@drawable/imagecircles"
            android:padding="3dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="250dp"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Doctor Jhon Cooper requested for affiliation."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/circleImageView"
            app:layout_constraintTop_toTopOf="@id/circleImageView" />




        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="42dp"

            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">>


            <TextView
                android:id="@+id/centerNameTextFeild"
                android:layout_width="250dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:inputType="textMultiLine"
                android:layout_marginTop="11dp"
                android:text="PIMS Hospital, Islamabad"
                android:textColor="@color/white"
                android:textSize="14dp"></TextView>


        </LinearLayout>

        <View
            android:id="@+id/strokeView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="1"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>