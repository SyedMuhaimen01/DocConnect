<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editPatientProfile"
    android:orientation="vertical"
    android:background="@drawable/profilebackground">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="695dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow_foreground"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="-70dp"
            android:textColor="@color/white"
            android:layout_marginLeft="90dp"></TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/picholder"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Mustafa"
            android:textColorHint="@color/hintcolor"

            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="samustafa290@gmail.com"
            android:textColorHint="@color/hintcolor"

            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/contactEditText"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="+923305926891"
            android:inputType="number"
            android:textColorHint="@color/hintcolor"

            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="23dp"></TextView>
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="6110108487541"
            android:textColorHint="@color/hintcolor"

            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="15dp"
            android:background="@drawable/inputbox"/>

        <Button
            android:id="@+id/editprof"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="Update Profile"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/secondarybuttons"></Button>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="-15dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom">
        <ImageButton
            android:id="@+id/home"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_icon_foreground"
            ></ImageButton>

        <ImageButton
            android:id="@+id/chats"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat_icon_foreground"
            ></ImageButton>
        <ImageButton
            android:id="@+id/map"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/map_icon_foreground"
            android:background="@drawable/buttonsbar_circle"
            ></ImageButton>
        <ImageButton
            android:id="@+id/appoint"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/appointment_icon_foreground"
            ></ImageButton>
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/profile_icon_foreground"
            ></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-325dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appoint"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"></TextView>

    </LinearLayout>
</LinearLayout>