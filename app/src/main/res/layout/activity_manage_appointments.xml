<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookAppointment"
    android:background="@drawable/book_appointment_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="675dp"
        tools:ignore="Orientation"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow_foreground"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="5dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Appointments"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-5dp"
                android:textColor="@color/white"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textColor="@color/white"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled"
                android:textColor="@color/white"/>
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabLayout"
            android:background="@color/white"></androidx.viewpager2.widget.ViewPager2>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"

        >
        <ImageButton
            android:id="@+id/home"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_icon_foreground"
            ></ImageButton>

        <ImageButton
            android:id="@+id/chats"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat_icon_foreground"
            ></ImageButton>
        <ImageButton
            android:id="@+id/map"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/map_icon_foreground"
            android:background="@drawable/buttonsbar_circle"
            ></ImageButton>
        <ImageButton
            android:id="@+id/appoint"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/appointment_icon_foreground"
            ></ImageButton>
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/profile_icon_foreground"
            ></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-325dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appoint"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#9F9B9B"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"></TextView>

    </LinearLayout>




</LinearLayout>

