<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="940dp"
    tools:context=".viewCenter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttons"
        android:orientation="vertical">
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/square_border"
            android:src="@mipmap/hospital_image"></ImageView>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-180dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/iconcircle"
                    android:backgroundTint="@color/white"></View>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backarrow_foreground"
                    android:tint="@color/black"
                    android:layout_marginTop="-75dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="UseAppTint" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="160dp">
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/iconcircle"
                    android:backgroundTint="@color/white"></View>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart_icon_foreground"
                    android:tint="@color/black"
                    android:layout_marginTop="-75dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="UseAppTint" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="-20dp">
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/iconcircle"
                    android:backgroundTint="@color/white"></View>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_icon_foreground"
                    android:tint="@color/black"
                    android:layout_marginTop="-75dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="UseAppTint" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/buttons"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="79dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ratingstar_icon_foreground"
                android:backgroundTint="@color/white"></ImageView>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="-20dp"
                android:textColor="@color/white"
                android:textAlignment="center"></TextView>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="( 1000 Reviews)"
                android:textSize="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="-40dp"
                android:textColor="@color/white"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="PIMS Islamabad"></TextView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="All types of treatments"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"></TextView>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            >

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/location_icon_foreground"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="11dp"
                android:inputType="textMultiLine"
                android:text="Islamabad, Pakistan"
                android:textColor="@color/white"
                android:textSize="14dp"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            >
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="85dp"
                android:layout_height="100dp"

                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/call_icon_foreground"
                    android:background="@drawable/iconcircle"></ImageView>
                <TextView

                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14dp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="85dp"
                android:layout_height="100dp"

                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/message_icon_foreground"
                    android:background="@drawable/iconcircle"></ImageView>
                <TextView

                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14dp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="85dp"
                android:layout_height="100dp"

                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:src="@drawable/direction_icon_foreground"
                    android:background="@drawable/iconcircle"
                    tools:ignore="UseAppTint"></ImageView>
                <TextView

                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Directions"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14dp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="85dp"
                android:layout_height="100dp"

                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/share_location_icon_foreground"

                    android:background="@drawable/iconcircle"></ImageView>
                <TextView

                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14dp"></TextView>

            </LinearLayout>

        </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treatments"
                    android:textColor="@color/white"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialists"
                    />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textColor="@color/white"/>
            </com.google.android.material.tabs.TabLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tabLayout"
                android:background="@color/white"></androidx.viewpager2.widget.ViewPager2>


    </LinearLayout>
    </LinearLayout>

