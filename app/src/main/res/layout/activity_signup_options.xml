<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupOptions"
    android:orientation="vertical"
    android:background="@drawable/profilebackground">
    <ImageView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:src="@drawable/apptitle"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up Options"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">
        <View
            android:id="@+id/patient"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/infocards"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/patienticon"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Personalized Care-Sign Up as a Patient"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-90dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Appointments hassle free"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="italic"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access your medical records anytime"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="italic"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="0dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_marginTop="-40dp">
        <View
            android:id="@+id/doctor"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/infocards"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/docicon"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Control of your Schedule-Sign Up as a Doctor"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-90dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seamlessly manage appointments and streamline your workflow."
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="italic"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="7dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access patient information and records with ease."
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="italic"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_marginTop="-120dp">
        <View
            android:id="@+id/center"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/infocards"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/centericon"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revolutionize Care: Enroll Your Center Now!"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-90dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enhanced patient experience through efficient scheduling."
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="italic"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centralized records for seamless coordination."
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="italic"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>
</LinearLayout>