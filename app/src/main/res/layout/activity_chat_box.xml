<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectAppointmentDate"
    tools:ignore="Orientation"
    android:background="@color/black"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/black"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow_foreground"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="5dp"/>
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/circleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/chat_userimage_background"
                android:padding="3dp"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingClass" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. John Cooper"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="-5dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
               ></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-410dp"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecyclerView"
            android:layout_marginTop="00dp"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="8dp"

            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/blackwhite">


        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="70dp"
    android:layout_height="70dp"
    android:background="@drawable/add_icon_foreground"
    android:layout_marginLeft="0dp"
    ></ImageButton>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_height="35dp"
                android:background="@drawable/searchbar"
                android:backgroundTint="@color/black">
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="The report suggests..."
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAlignment="viewStart"
                    android:background="@color/black"
                    android:paddingTop="0dp">
                </EditText>
            </LinearLayout>
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="@drawable/send_icon_foreground"
                android:layout_marginLeft="-10dp"
                ></ImageButton>

        </LinearLayout>
    </LinearLayout>





</LinearLayout>